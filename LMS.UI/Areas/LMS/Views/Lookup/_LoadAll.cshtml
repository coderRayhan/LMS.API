                        Action
                        </button>
                        <div class="dropdown-menu">*@
                            <a onclick="jQueryModalGet('/LMS/Lookup/CreateOrEdit?id=@item.Id', 'Lookup')">Edit</a>
                            <a onclick="deleteData('/LMS/Lookup/Delete?id=@item.Id')">Delete</a>
                            @*</div>
                        </div>*@
                            @*<div class="btn-group">
                        <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Action
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">
                        <a onclick="jQueryModalGet('/LMS/Lookup/CreateOrEdit?id=@item.Id', 'Lookup')" class="dropdown-item">Edit</a>
                        <a href="/LMS/Lookup/Delete?id=@item.Id" class="dropdown-item">Delete</a>
                        </div>
                        </div>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

