@using LMS.Domain.Entities;
@model List<Lookup>
<style>
    .customActiveBtn {
        pointer-events: none;
        background-color: #99F39A;
        font-weight: 600
    }
    .customInactiveBtn {
        pointer-events: none;
        background-color: #F3ABA0;
        font-weight: 600
    }
</style>
<div class="card mt-5">
    <div class="card-body">
        <table class="table table-bordered table-striped mt-2 text-center" id="lookupTable" style="width:100%">
            <thead class="thead-primary" style="background-color:#1d1919; color:white">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Name (Bangla)</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.NameBN</td>
                        <td>
                            @if(item.Status == "Active")
                            {
                                <a class="btn btn-sm customActiveBtn">@item.Status</a>
                            }
                            else
                            {
                                <a class="btn btn-sm customInactiveBtn">@item.Status</a>
                            }
                        </td>
