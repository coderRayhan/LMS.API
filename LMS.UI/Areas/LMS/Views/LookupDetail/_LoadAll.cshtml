@using LMS.Domain.Entities;
@model IEnumerable<LookupDetail>
<div class="card mt-5">
    <div class="card-body">
        <table id="lookupDetailTable" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Name Bangla</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.NameBN</td>
                        <td>@item.Status</td>
                        <td>
                            <a onclick="jQueryModalGet('/LMS/LookupDetail/CreateOrEdit?id=@item.Id', 'Lookup Detail')">Edit</a>
                            <a onclick="deleteData('/LMS/LookupDetail/Delete?id=@item.Id')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(() => {
        $('#lookupDetailTable').DataTable();
    })
</script>
